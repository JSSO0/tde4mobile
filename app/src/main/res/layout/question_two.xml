<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".QuestionTwo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:padding="10px"
        android:paddingTop="50px"
        android:rotation="-1"
        android:text="Qual desses animes é conhecido por sua história complexa e personagens intrigantes?"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="85dp" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack on Titan"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="156dp" />

        <RadioButton
            android:id="@+id/question5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F91515"
            android:text="Fullmetal Alchemist: Brotherhood"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="220dp" />

        <RadioButton
            android:id="@+id/question6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="Neon Genesis Evangelion"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="291dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2/10"
            android:textAlignment="center" />
    </RadioGroup>

</LinearLayout>